@model Teachers

<h2 class="mb-4 text-center"> Add New Teacher</h2>

<div class="row justify-content-center">
    <div class="col-md-6 col-lg-5">
        <form asp-action="Create" method="post" class="">
            <div class="mb-3">
                <label asp-for="Name" class="form-label">Teacher's Name</label>
                <input asp-for="Name" class="form-control" type="text" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="JoiningDate" class="form-label">Joining Date</label>
                <input asp-for="JoiningDate" class="form-control"  />
                <span asp-validation-for="JoiningDate" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="Salary" class="form-label">Salary</label>
                <input asp-for="Salary" class="form-control"  />
                <span asp-validation-for="Salary" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="Phone" class="form-label">Phone</label>
                <input asp-for="Phone" class="form-control"  />
                <span asp-validation-for="Phone" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="Email" class="form-label">Email</label>
                <input asp-for="Email" class="form-control" type="email" />
            </div>

            <div class="mb-3">
                <label asp-for="IsActive" class="form-check-label ">Is Active</label>
                <input asp-for="IsActive" class="form-check-input" type="checkbox" />
            </div>
            <span asp-validation-for="IsActive" class="text-danger h3"></span>


            <div class="d-flex justify-content-end gap-2 mt-3">
                <button type="submit" class="btn btn-success px-4">Save</button>
                <a asp-action="Index" class="btn btn-secondary px-4">Cancel</a>
            </div>

        </form>

    </div>
</div>