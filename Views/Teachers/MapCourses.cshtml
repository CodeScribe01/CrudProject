@model TeacherCourseMapping

<h2 class="mb-4 text-center">Teacher Course Mapping</h2>

<div class="row justify-content-center">
    <div class="col-md-6 col-lg-5">
        <form asp-action="MapCourses" method="post">

            <div class="mb-3">
                <label class="form-label">Teacher</label>
                <select asp-for="TeacherId" class="form-select"
                        asp-items="@(new SelectList((List<Teachers>)ViewData["Teachers"], "TeacherId", "Name"))">
                    <option value="">--Select Teacher--</option>
                </select>
                <span asp-validation-for="TeacherId" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label class="form-label">Course</label>
                <select asp-for="CourseId" class="form-select"
                        asp-items="@(new SelectList((List<CourseManagement>)ViewData["Course"], "CourseId", "CourseName"))">
                    <option value="">--Select Course--</option>
                </select>
                <span asp-validation-for="CourseId" class="text-danger"></span>
            </div>


            <div class="d-flex justify-content-end gap-2 mt-3">
                <button type="submit" class="btn btn-success px-4">Save</button>
                <a asp-action="Index" class="btn btn-secondary px-4">Cancel</a>
            </div>


        </form>
    </div>
</div>



<hr class="my-4" />

<h4 class="text-center mb-3">Mapped Teacher – Course List</h4>

<table class="table table-bordered table-striped">
    <thead class="table-dark">
        <tr>
            <th>Teacher Name</th>
            <th>Course Name</th>
        </tr>
    </thead>
    <tbody>
        @if (ViewData["MappedList"] != null)
        {
            foreach (dynamic item in ViewData["MappedList"] as IEnumerable<dynamic>)
            {
                <tr>
                    <td>@item.TeacherName</td>
                    <td>@item.CourseName</td>
                </tr>
            }
        }
        else
        {
            <tr>
                <td colspan="2" class="text-center">
                    No mappings available
                </td>
            </tr>
        }
    </tbody>
</table> 
