@model CrudProject.Models.Teachers

@{
    ViewData["Title"] = "Delete Teacher";
}

<div class="container mt-4">
    <h1>Delete Teacher</h1>
    <hr />

    <div class="alert alert-dark">
        <strong>Are you sure you want to delete this Teacher?</strong>
    </div>

    <div class="card">
        <div class="card-body">
            <dl class="row">
                <dt class="col-sm-3">@Html.DisplayNameFor(model => model.Name)</dt>
                <dd class="col-sm-9">@Html.DisplayFor(model => model.Name)</dd>

                <dt class="col-sm-3">@Html.DisplayNameFor(model => model.Email)</dt>
                <dd class="col-sm-9">@Html.DisplayFor(model => model.Email)</dd>

                <dt class="col-sm-3">@Html.DisplayNameFor(model => model.Phone)</dt>
                <dd class="col-sm-9">@Html.DisplayFor(model => model.Phone)</dd>

                <dt class="col-sm-3">@Html.DisplayNameFor(model => model.Salary)</dt>
                <dd class="col-sm-9">@Html.DisplayFor(model => model.Salary)</dd>

                <dt class="col-sm-3">@Html.DisplayNameFor(model => model.JoiningDate)</dt>
                <dd class="col-sm-9">@Html.DisplayFor(model => model.JoiningDate)</dd>

                <dt class="col-sm-3">@Html.DisplayNameFor(model => model.IsActive)</dt>
                <dd class="col-sm-9">@Html.DisplayFor(model => model.IsActive)</dd>

            </dl>
        </div>
    </div>

    <div class="mt-3">
        <form asp-action="Delete">
            <input type="hidden" asp-for="TeacherId" />
            <button type="submit" class="btn btn-dark">Delete</button>
            <a asp-action="Index" class="btn btn-outline-dark">Cancel</a>
        </form>
    </div>
</div>
