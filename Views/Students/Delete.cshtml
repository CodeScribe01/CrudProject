@model CrudProject.Models.Student

@{
    ViewData["Title"] = "Delete Student";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-lg-7 col-md-9">

            <div class="card shadow-sm">
                <div class="card-header bg-dark text-white">
                    <h4 class="mb-0">Delete Student</h4>
                </div>

                <div class="card-body">

                    <div class="alert alert-warning">
                        <strong>Are you sure you want to delete this student?</strong>
                        <div class="small mt-1">
                            This action cannot be undone.
                        </div>
                    </div>

                    <dl class="row mb-0">
                        <dt class="col-sm-4 text-muted">Name</dt>
                        <dd class="col-sm-8 fw-semibold">@Model.Name</dd>

                        <dt class="col-sm-4 text-muted">Email</dt>
                        <dd class="col-sm-8">@Model.Email</dd>

                        <dt class="col-sm-4 text-muted">Semester</dt>
                        <dd class="col-sm-8">@Model.Semester</dd>

                        <dt class="col-sm-4 text-muted">Course</dt>
                        <dd class="col-sm-8">@Model.Course</dd>

                        <dt class="col-sm-4 text-muted">Fees</dt>
                        <dd class="col-sm-8">@Model.Fees</dd>

                        <dt class="col-sm-4 text-muted">Enrollment Date</dt>
                        <dd class="col-sm-8">
                            @Model.EnrollmentDate.ToString("dd MMM yyyy")
                        </dd>

                        <dt class="col-sm-4 text-muted">Phone</dt>
                        <dd class="col-sm-8">@Model.Phone</dd>

                        <dt class="col-sm-4 text-muted">Address</dt>
                        <dd class="col-sm-8">@Model.Address</dd>
                    </dl>

                </div>

                <div class="card-footer bg-light">
                    <form asp-action="Delete" class="d-flex gap-2">
                        <input type="hidden" asp-for="StudentId" />

                        <button type="submit" class="btn btn-danger px-4">
                            Delete
                        </button>

                        <a asp-action="Index" class="btn btn-outline-secondary px-4">
                            Cancel
                        </a>
                    </form>
                </div>
            </div>

        </div>
    </div>
</div>
