@model CourseManagement

<h2 class="mb-4 text-center text-danger">Delete Course</h2>

<div class="row justify-content-center">
    <div class="col-md-6 col-lg-5">
        <div class="card p-4 shadow-sm border-danger">

            <div class="alert alert-danger">
                <strong>Warning!</strong> Are you sure you want to delete this course?
            </div>

            <div class="mb-3">
                <label class="form-label fw-semibold">Course Name</label>
                <p class="form-control-plaintext">
                    @Model.CourseName
                </p>
            </div>

            <div class="mb-3">
                <label class="form-label fw-semibold">Semester</label>
                <p class="form-control-plaintext">
                    @Model.Semester
                </p>
            </div>

            <div class="mb-3">
                <label class="form-label fw-semibold">Fees</label>
                <p class="form-control-plaintext">
                    @Model.Fees
                </p>
            </div>

            <form asp-action="Delete" method="post">
                <input type="hidden" asp-for="CourseId" />

                <!-- Buttons -->
                <div class="d-flex justify-content-end gap-2 mt-3">
                    <button type="submit" class="btn btn-danger px-4">
                        Confirm Delete
                    </button>
                    <a asp-action="Index" class="btn btn-secondary px-4">
                        Cancel
                    </a>
                </div>
            </form>

        </div>
    </div>
</div>
