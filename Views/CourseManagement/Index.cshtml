@model List<CourseManagement>

<h2>Course Management</h2>
<a asp-action="Create" class="btn btn-dark ">Add New Course</a>

<table class="table">
    <thead>
        <tr>
            <th>Course Name</th>
            <th>Semester</th>
            <th>Fees</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var course in Model)
        {
            <tr>
                <td>@course.CourseName</td>
                <td>@course.Semester</td>
                <td>@course.Fees</td>
                <td>
                    <a asp-action="Details" asp-route-id="@course.CourseId" class="btn btn-info btn-sm">View</a>
                    <a asp-action="Edit" asp-route-id="@course.CourseId" class="btn btn-warning btn-sm">Edit</a>
                    <a asp-action="Delete" asp-route-id="@course.CourseId" class="btn btn-danger btn-sm">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>